{
    "compilerOptions": {
        "outDir": "./smevirtual/static/dist/",
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es6",
            "dom"
        ],
        "sourceMap": true,
        "allowJs": true,
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./client/**/*"
    ],
    "types": [
        "node",
        "typePatches",
        "webpack-env",
    ]
}
